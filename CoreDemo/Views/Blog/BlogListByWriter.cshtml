@model List<Blog>

@{
	ViewData["Title"] = "BlogListByWriter";
	Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazarin bloqlari</h1>

<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Bloq başlığı</th>
		<th>Yaranma tarixi</th>
		<th>Categoriya</th>
		<th>Vəziyyət</th>
		<th>Sil</th>
		<th>Redaktə et</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.BlogID</th>
			<td>@item.BlogTitle</td>
			<td>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</td>
			<td>@item.Category.CategoryName</td>
			@if (item.BlogStatus)
			{
				<td class="badge badge-success">Active</td>
			}
			else
			{
				<td class="badge badge-secondary">Passive</td>
			}
			<td>
			<td><a href="#" class="btn btn-danger">Sil</a></td>
			<td><a href="#" class="btn btn-warning">Redaktə et</a></td>
		</tr>
	}
</table>
<a href="#" class="btn btn-primary">Yeni Bloq yarat</a>