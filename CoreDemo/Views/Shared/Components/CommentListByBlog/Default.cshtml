@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
	<h4>Rəylər</h4>
	@if (Model.Count() != 0)
	{
		@foreach (var item in Model)
		{
			<div class="media">

				<img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
				<div class="media-body">
					<h5 class="mt-0">@item.CommentUserName</h5>
					<p>
						@item.CommentContent
					</p>

				</div>
			</div>
		}
	}
	else
	{
		<p>Bu bloqda hələ heç bir rəy yoxdur, ilk rəy yazan siz olun.</p>
	}
</div>